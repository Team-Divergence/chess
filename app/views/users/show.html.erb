<h1>My Profile</h1>
<br />
<h1>Open Games</h1>

<!-- Listing of all open games to join -->
<% @games.each do |game| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= game.name %></h1>
    <br />
    <%= link_to 'Join Game!', game_path(game), method: 'put', class: 'btn btn-primary btn-large' %>    
  </div>
<% end %>



  